<quiqqer>
    <feedTypes>

        <!-- RSS -->
        <feedType class="QUI\Feed\Handler\RSS\Feed">
            <title>
                <locale group="quiqqer/feed" var="feed.RSS.title"/>
            </title>
            <description>
                <locale group="quiqqer/feed" var="feed.RSS.description"/>
            </description>

            <mimeType><![CDATA[application/rss+xml]]></mimeType>
            <publishable>1</publishable>

            <categories>
                <category>
                    <settings>
                        <title>
                            <locale group="quiqqer/feed" var="feed.RSS.settings.title"/>
                        </title>

                        <input type="hidden"
                               conf="feedsites"
                               data-qui="controls/projects/project/site/Select"
                        >
                            <text>
                                <locale group="quiqqer/feed" var="feed.settings.feedsites.title"/>
                            </text>
                            <description>
                                <locale group="quiqqer/feed" var="feed.settings.feedsites.description"/>
                            </description>
                        </input>

                        <input type="hidden"
                               conf="feedsites_exclude"
                               data-qui="controls/projects/project/site/Select"
                        >
                            <text>
                                <locale group="quiqqer/feed" var="feed.settings.feedsites_exclude.title"/>
                            </text>
                        </input>
                    </settings>
                </category>

            </categories>

        </feedType>

        <!-- Atom -->
        <feedType class="QUI\Feed\Handler\Atom\Feed">
            <title>
                <locale group="quiqqer/feed" var="feed.Atom.title"/>
            </title>
            <description>
                <locale group="quiqqer/feed" var="feed.Atom.description"/>
            </description>

            <mimeType><![CDATA[application/atom+xml]]></mimeType>
            <publishable>1</publishable>

            <categories>
                <category>
                    <settings>
                        <title>
                            <locale group="quiqqer/feed" var="feed.Atom.settings.title"/>
                        </title>

                        <input type="hidden"
                               conf="feedsites"
                               data-qui="controls/projects/project/site/Select"
                        >
                            <text>
                                <locale group="quiqqer/feed" var="feed.settings.feedsites.title"/>
                            </text>
                            <description>
                                <locale group="quiqqer/feed" var="feed.settings.feedsites.description"/>
                            </description>
                        </input>

                        <input type="hidden"
                               conf="feedsites_exclude"
                               data-qui="controls/projects/project/site/Select"
                        >
                            <text>
                                <locale group="quiqqer/feed" var="feed.settings.feedsites_exclude.title"/>
                            </text>
                        </input>
                    </settings>
                </category>

            </categories>

        </feedType>

        <!-- Google Sitemap -->
        <feedType class="QUI\Feed\Handler\GoogleSitemap\Feed">
            <title>
                <locale group="quiqqer/feed" var="feed.GoogleSitemap.title"/>
            </title>
            <description>
                <locale group="quiqqer/feed" var="feed.GoogleSitemap.description"/>
            </description>

            <mimeType><![CDATA[application/xml]]></mimeType>
            <publishable>0</publishable>
            <pagination>1</pagination>

            <categories>
                <category>
                    <settings>
                        <title>
                            <locale group="quiqqer/feed" var="feed.GoogleSitemap.settings.title"/>
                        </title>

                        <input type="hidden"
                               conf="feedsites"
                               data-qui="controls/projects/project/site/Select"
                        >
                            <text>
                                <locale group="quiqqer/feed" var="feed.settings.feedsites.title"/>
                            </text>
                            <description>
                                <locale group="quiqqer/feed" var="feed.settings.feedsites.description"/>
                            </description>
                        </input>

                        <input type="hidden"
                               conf="feedsites_exclude"
                               data-qui="controls/projects/project/site/Select"
                        >
                            <text>
                                <locale group="quiqqer/feed" var="feed.settings.feedsites_exclude.title"/>
                            </text>
                        </input>
                    </settings>
                </category>

            </categories>

        </feedType>
    </feedTypes>
</quiqqer>
