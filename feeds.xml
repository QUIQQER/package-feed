<quiqqer>
    <feedTypes>
        <feedType class="QUI\Feed\Handler\RSS\Feed">
            <title>
                <locale group="quiqqer/feed" var="feed.RSS.title"/>
            </title>
            <description>
                <locale group="quiqqer/feed" var="feed.RSS.description"/>
            </description>

            <mimeType><![CDATA[application/rss+xml]]></mimeType>
            <publishable>1</publishable>

            <categories>
                <category>
                    <settings>
                        <title>
                            <locale group="quiqqer/feed" var="feed.RSS.settings.title"/>
                        </title>

                        <input type="hidden"
                               conf="feedsites"
                               data-qui="controls/projects/project/site/Select"
                        >
                            <text>
                                <locale group="quiqqer/feed" var="feed.RSS.settings.feedsites.title"/>
                            </text>
                        </input>

                        <input type="hidden"
                               conf="feedsites_exclude"
                               data-qui="controls/projects/project/site/Select"
                        >
                            <text>
                                <locale group="quiqqer/feed" var="feed.RSS.settings.feedsites_exclude.title"/>
                            </text>
                        </input>
                    </settings>
                </category>

            </categories>

        </feedType>
    </feedTypes>
</quiqqer>
